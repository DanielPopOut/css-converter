{
	"name": "css-converter",
	"displayName": "CSS Converter",
	"publisher": "Lakkannawalikar",
	"description": "Convert HTML CSS to JS CSS for styled components and vice-versa.",
	"version": "0.1.3",
	"engines": {
		"vscode": "^1.33.0"
	},
	"keywords": [
		"css",
		"converter",
		"style",
		"css convert",
		"js style",
		"camel case",
		"kebab case",
		"style component",
		"styled"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Lakkanna/css-converter.git"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#2d2d2d",
		"theme": "dark"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.cssConverter"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.cssConverter",
				"title": "CSS Converter"
			}
		],
		"configuration": [
			{
				"title": "CSS Converter configuration",
				"properties": {
					"cssConverter.autoFormat": {
						"type": "boolean",
						"default": true,
						"description": "Auto format generated css"
					}
				}
			}
		],
		"keybindings": [
			{
				"command": "extension.cssConverter",
				"key": "shift+cmd+v",
				"mac": "shift+cmd+v",
				"win": "shift+ctrl+v",
				"linux": "shift+ctrl+v"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/lodash": "4.14.149",
		"@types/mocha": "5.2.7",
		"@types/node": "12.12.12",
		"tslint": "5.20.1",
		"typescript": "3.7.2",
		"vscode": "1.1.36"
	},
	"dependencies": {
		"lodash": "4.17.15"
	}
}
