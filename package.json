{
	"name": "css-converter",
	"displayName": "CSS Converter",
	"publisher": "Lakkannawalikar",
	"description": "Convert HTML CSS to JS CSS for styled components and vice-versa.",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.33.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Lakkanna/css-converter.git"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#2d2d2d",
		"theme": "dark"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.cssConverter"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.cssConverter",
				"title": "CSS Converter"
			}
		],
		"configuration":[
			{
				"title": "CSS Converter configuration",
				"properties": {
					"cssConverter.autoFormat": {
						"type": "boolean",
						"default": true,
						"description": "Auto format generated css"
					}
				}
			}
		],
		"keybindings":[
			{
				"command": "extension.cssConverter",
				"key": "cmd+c+c",
				"mac": "cmd+c+c",
				"win": "ctrl+c+c",
				"linux": "ctrl+c+c"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/lodash": "4.14.126",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"lodash": "4.17.11",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
